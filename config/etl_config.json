{
  "paths": {
    "raw_data_dir": "data/raw",
    "staging_dir": "data/staging",
    "clean_data_dir": "data/clean",
    "archive_dir": "data/archive",
    "logs_dir": "logs"
  },

  "files": {
    "train_csv": "data/raw/train.csv",
    "test_csv": "data/raw/test.csv",
    "features_csv": "data/raw/features.csv",
    "stores_csv": "data/raw/stores.csv",

    "sales_clean": "data/clean/sales_clean.csv",
    "features_clean": "data/clean/features_clean.csv",
    "stores_clean": "data/clean/stores_clean.csv",
    "full_dataset_clean": "data/clean/full_dataset_clean.csv"
  },

  "transformations": {
    "date_columns": {
      "sales": "sale_date",
      "features": "feature_date"
    },

    "rename_columns": {
      "sales": {
        "Store": "store",
        "Dept": "dept",
        "Date": "sale_date",
        "Weekly_Sales": "weekly_sales",
        "IsHoliday": "is_holiday"
      },
      "features": {
        "Store": "store",
        "Date": "feature_date",
        "Temperature": "temperature",
        "Fuel_Price": "fuel_price",
        "MarkDown1": "markdown1",
        "MarkDown2": "markdown2",
        "MarkDown3": "markdown3",
        "MarkDown4": "markdown4",
        "MarkDown5": "markdown5",
        "CPI": "cpi",
        "Unemployment": "unemployment",
        "IsHoliday": "is_holiday"
      },
      "stores": {
        "Store": "store",
        "Type": "store_type",
        "Size": "size"
      }
    }
  },

  "validation": {
    "check_missing_values": true,
    "check_duplicate_rows": true,
    "check_date_format": true,
    "check_row_counts": true
  },

  "load_rules": {
    "truncate_before_load": true,
    "batch_insert": true,
    "batch_size": 50000
  }
}
